<Page
    x:Class="VRCFaceTracking.Views.ConfigurationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="24">
            <!-- Header Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="Headset Configuration Management" Style="{ThemeResource TitleTextBlockStyle}"/>
                <TextBlock Text="Manage and switch between different headset configurations" 
                           Style="{ThemeResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
            </StackPanel>
            
            <!-- Configuration Selection -->
            <StackPanel Spacing="8">
                <TextBlock Text="Current Configuration" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <ComboBox x:Name="ConfigurationComboBox" 
                          Header="Select Configuration"
                          HorizontalAlignment="Stretch"
                          MinWidth="300"
                          SelectedItem="{x:Bind ViewModel.SelectedConfiguration, Mode=TwoWay}"
                          ItemsSource="{x:Bind ViewModel.Configurations, Mode=OneWay}"
                          DisplayMemberPath="Name"/>
            </StackPanel>
            
            <!-- Configuration Name Edit -->
            <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.SelectedConfiguration, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="Configuration Name" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <TextBox x:Name="ConfigurationNameTextBox"
                         Header="Name"
                         Text="{x:Bind ViewModel.SelectedConfiguration.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         MaxWidth="400"
                         HorizontalAlignment="Left"/>
            </StackPanel>
            
            <!-- Module Management -->
            <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.SelectedConfiguration, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="Module Management" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <TextBlock Text="Move modules between enabled and available lists to configure which modules are active for this configuration."
                           Style="{ThemeResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                
                <Grid ColumnDefinitions="*,40,*" RowDefinitions="Auto,8,*,8,Auto">
                    <!-- Enabled Modules -->
                    <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="5">
                        <TextBlock Text="Enabled Modules" 
                                   Style="{ThemeResource BodyStrongTextBlockStyle}"
                                   Margin="0,0,0,8"/>
                        <ListBox x:Name="IncludedModulesList"
                                 ItemsSource="{x:Bind ViewModel.IncludedModules, Mode=OneWay}"
                                 SelectedItem="{x:Bind ViewModel.SelectedIncludedModule, Mode=TwoWay}"
                                 Height="250"
                                 BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                 BorderThickness="1"
                                 CornerRadius="4"
                                 Background="{ThemeResource LayerFillColorDefaultBrush}"/>
                        <Button Content="← Remove Module" 
                                Command="{x:Bind ViewModel.RemoveModuleCommand}"
                                HorizontalAlignment="Stretch"
                                Margin="0,8,0,0"
                                IsEnabled="{x:Bind ViewModel.SelectedIncludedModule, Mode=OneWay, Converter={StaticResource NullToBooleanConverter}}"/>
                    </StackPanel>
                    
                    <!-- Center Buttons -->
                    <StackPanel Grid.Column="1" Grid.Row="2" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Spacing="8">
                        <Button Content="→"
                                Command="{x:Bind ViewModel.AddModuleCommand}"
                                Width="32" Height="32"
                                HorizontalAlignment="Center"
                                ToolTipService.ToolTip="Add selected module"
                                IsEnabled="{x:Bind ViewModel.SelectedAvailableModule, Mode=OneWay, Converter={StaticResource NullToBooleanConverter}}"/>
                        <Button Content="←"
                                Command="{x:Bind ViewModel.RemoveModuleCommand}"
                                Width="32" Height="32"
                                HorizontalAlignment="Center"
                                ToolTipService.ToolTip="Remove selected module"
                                IsEnabled="{x:Bind ViewModel.SelectedIncludedModule, Mode=OneWay, Converter={StaticResource NullToBooleanConverter}}"/>
                    </StackPanel>
                    
                    <!-- Available Modules -->
                    <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="5">
                        <TextBlock Text="Available Modules" 
                                   Style="{ThemeResource BodyStrongTextBlockStyle}"
                                   Margin="0,0,0,8"/>
                        <ListBox x:Name="AvailableModulesList"
                                 ItemsSource="{x:Bind ViewModel.AvailableModules, Mode=OneWay}"
                                 SelectedItem="{x:Bind ViewModel.SelectedAvailableModule, Mode=TwoWay}"
                                 Height="250"
                                 BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                 BorderThickness="1"
                                 CornerRadius="4"
                                 Background="{ThemeResource LayerFillColorDefaultBrush}"/>
                        <Button Content="Add Module →" 
                                Command="{x:Bind ViewModel.AddModuleCommand}"
                                HorizontalAlignment="Stretch"
                                Margin="0,8,0,0"
                                IsEnabled="{x:Bind ViewModel.SelectedAvailableModule, Mode=OneWay, Converter={StaticResource NullToBooleanConverter}}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
            
            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Set as Active Configuration" 
                        Command="{x:Bind ViewModel.SetActiveCommand}"
                        Style="{ThemeResource AccentButtonStyle}"
                        IsEnabled="{x:Bind ViewModel.SelectedConfiguration, Mode=OneWay, Converter={StaticResource NullToBooleanConverter}}"/>
                <Button Content="Save Changes" 
                        Command="{x:Bind ViewModel.SaveChangesCommand}"
                        IsEnabled="{x:Bind ViewModel.SelectedConfiguration, Mode=OneWay, Converter={StaticResource NullToBooleanConverter}}"/>
                <Button Content="Add New Configuration" 
                        Command="{x:Bind ViewModel.AddNewCommand}"/>
                <Button Content="Delete Configuration" 
                        Command="{x:Bind ViewModel.DeleteCommand}"
                        Background="{ThemeResource SystemFillColorCriticalBrush}"
                        Foreground="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                        IsEnabled="{x:Bind ViewModel.SelectedConfiguration, Mode=OneWay, Converter={StaticResource NullToBooleanConverter}}"/>
            </StackPanel>
            
            <!-- Module Import Section -->
            <StackPanel Spacing="12">
                <TextBlock Text="Import New Modules" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <TextBlock Text="Import modules from external folders. The module name will sync with the folder name automatically."
                           Style="{ThemeResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                
                <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="16">
                        <Grid ColumnDefinitions="*,16,Auto">
                            <StackPanel Grid.Column="0" Spacing="8">
                                <TextBlock Text="Selected Folder" 
                                           Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                <TextBox x:Name="SelectedFolderPath"
                                         Text="{x:Bind ViewModel.SelectedImportPath, Mode=OneWay}"
                                         IsReadOnly="True"
                                         PlaceholderText="No folder selected..."
                                         Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                            </StackPanel>
                            
                            <Button Grid.Column="2"
                                    Content="Browse..."
                                    Command="{x:Bind ViewModel.BrowseModuleFolderCommand}"
                                    VerticalAlignment="Bottom"
                                    MinWidth="100"/>
                        </Grid>
                        
                        <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.SelectedImportPath, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Module Preview" 
                                       Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <Border Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12">
                                <Grid ColumnDefinitions="Auto,16,*">
                                    <FontIcon Grid.Column="0" 
                                              Glyph="&#xE8B7;" 
                                              FontSize="24"
                                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                    <StackPanel Grid.Column="2" Spacing="4">
                                        <TextBlock Text="{x:Bind ViewModel.ImportModuleName, Mode=OneWay}"
                                                   Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="{x:Bind ViewModel.SelectedImportPath, Mode=OneWay}"
                                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                            <Button Content="Cancel"
                                    Command="{x:Bind ViewModel.CancelImportCommand}"
                                    Visibility="{x:Bind ViewModel.SelectedImportPath, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <Button Content="Import Module"
                                    Command="{x:Bind ViewModel.ImportModuleCommand}"
                                    Style="{ThemeResource AccentButtonStyle}"
                                    IsEnabled="{x:Bind ViewModel.CanImportModule, Mode=OneWay}"/>
                        </StackPanel>
                        
                        <!-- Import Status -->
                        <InfoBar x:Name="ImportStatusBar"
                                 IsOpen="{x:Bind ViewModel.ShowImportStatus, Mode=OneWay}"
                                 Severity="{x:Bind ViewModel.ImportStatusSeverity, Mode=OneWay}"
                                 Title="{x:Bind ViewModel.ImportStatusTitle, Mode=OneWay}"
                                 Message="{x:Bind ViewModel.ImportStatusMessage, Mode=OneWay}"
                                 IsClosable="True"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Active Configuration Display -->
            <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Visibility="{x:Bind ViewModel.ActiveConfiguration, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                <StackPanel Spacing="8">
                    <TextBlock Text="Currently Active Configuration" 
                               Style="{ThemeResource BodyStrongTextBlockStyle}"
                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    <TextBlock Text="{x:Bind ViewModel.ActiveConfiguration.Name, Mode=OneWay}"
                               Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.ActiveConfigurationModules, Mode=OneWay}"
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>

</Page>